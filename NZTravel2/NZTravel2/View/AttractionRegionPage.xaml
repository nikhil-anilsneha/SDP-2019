<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NZTravel2.View.AttractionRegionPage">
    <ContentPage.Content>
        <StackLayout>
            <BoxView Color="Transparent" HeightRequest="5"></BoxView>
            <Button x:Name="CurrentRegionButton" Text="CURRENT REGION" Clicked="CurrentRegionButton_Clicked"/>
            <BoxView Color="Transparent" HeightRequest="10"></BoxView>
            <Label Text="All NZ Regions"></Label>
            <Button x:Name="WaikatoRegionButton" Text="WAIKATO" Clicked="WaikatoRegionButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>